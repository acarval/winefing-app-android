<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/booking_menu"
            android:onClick="bookingList"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/btn_reservation"
            android:background="@drawable/mesreservations_background"
            android:layout_weight="1" />

        <Button
            android:text="@string/discover_menu"
            android:onClick="propertiesList"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/btn_discover"
            android:background="@drawable/decouvrir_background"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>