<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <ImageView
        android:id="@+id/main_image_location"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:text="Réserver"
        android:background="@drawable/button_red"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carac_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/button_booking" />

    <View
        android:layout_width="210dp"
        android:layout_height="1dip"
        android:background="@color/grey"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_below="@id/button_booking"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/carac_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carac_location_content"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Oil"
                android:textSize="15dp"
                android:gravity="left"
                android:text="Lit(s)"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/location_carac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Oil"
                android:textSize="15dp"
                android:gravity="right"
                android:text="2 lits simples"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Oil"
                android:textSize="15dp"
                android:gravity="left"
                android:text="Invités"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/nb_people_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Oil"
                android:textSize="15dp"
                android:gravity="right"
                android:text="3"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/carac_location_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_image_location"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Oil"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Chambre Nouaison"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/location_region_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Oil"
                    android:textStyle="italic"
                    android:textSize="15dp"
                    android:text="Entre-deux-mers, Bordelais"
                    android:layout_below="@+id/room_name"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/location_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="182€/nuit"
                android:layout_below="@+id/room_name"
                android:layout_centerHorizontal="true"
                android:gravity="right"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_gravity="center"
            android:background="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>


</RelativeLayout>