<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.dawin.winefing.winefing.activities.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Valentin Morreel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/OilDark"
        android:layout_marginTop="20dp"
        android:id="@+id/profile_name" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:text="Email : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/greyDark" />

        <TextView
            android:text="valentin.morreel@nooope.me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Oil"
            android:id="@+id/profile_email" />

        <TextView
            android:text="Phone : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/greyDark" />

        <TextView
            android:text="(+33) 6 45 43 91 12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/Oil"
            android:id="@+id/profile_phone" />

        <TextView
            android:text="Description : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/greyDark"
            android:id="@+id/textView2" />

        <TextView
            android:text="Batnae municipium in Anthemusia conditum Macedonum manu priscorum ab Euphrate flumine brevi spatio disparatur, refertum mercatoribus opulentis, ubi annua sollemnitate prope Septembris initium mensis ad nundinas magna promiscuae fortunae convenit."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/Oil"
            android:id="@+id/profile_description" />

    </LinearLayout>


</RelativeLayout>
